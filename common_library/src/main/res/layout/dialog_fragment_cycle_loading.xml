<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.jgw.common_library.bean.ProgressDialogBean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="176dp"
            android:layout_centerInParent="true"
            android:background="@drawable/radius4_white">


            <com.jgw.common_library.widget.loadingDialog.CircularProgressView
                android:id="@+id/cpv_fragment_loading"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"
                app:backColor="#BDE3FF"
                app:backWidth="5dp"
                app:progColor="@color/main_color"
                app:progWidth="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="46dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@{data.tips}"
                android:includeFontPadding="false"
                android:textColor="@color/gray_66"
                android:textSize="14sp"
                tools:text="正在上传,请耐心等候哦~" />
        </RelativeLayout>
    </RelativeLayout>

</layout>