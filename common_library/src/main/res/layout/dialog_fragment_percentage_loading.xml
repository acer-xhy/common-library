<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.jgw.common_library.bean.ProgressDialogBean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:background="@drawable/radius4_white"
            tools:ignore="dpUsage">

            <RelativeLayout
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp">

                <com.jgw.common_library.widget.loadingDialog.CircularProgressView
                    android:id="@+id/cpv_dialog_fragment_percentage_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backColor="#BDE3FF"
                    app:backWidth="5dp"
                    app:progColor="@color/main_color"
                    app:progress="@{data.progress}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@{data.progressText}"
                    android:textColor="@color/main_color"
                    android:textSize="20sp"
                    tools:text="99" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:includeFontPadding="false"
                android:text="@{data.tips}"
                android:textColor="@color/gray_66"
                android:textSize="14sp"
                tools:text="正在上传,请耐心等候哦~" />
        </RelativeLayout>
    </RelativeLayout>

</layout>