<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_32"
            android:textSize="18sp"
            android:gravity="center"
            tools:text="--" />

        <TextView
            android:id="@+id/tv_dialog_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="4"
            android:gravity="center"
            android:textColor="@color/gray_aa"
            android:textSize="16sp"
            tools:text="--" />

        <EditText
            android:id="@+id/et_dialog_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dialog_input_background"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:maxLines="1"
            android:textColor="@color/gray_32"
            android:textSize="16sp"
            tools:text="请输入" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_dd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_btn_common"
            android:gravity="center"
            android:textColor="@color/gray_33"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="content 1" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_dd" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_btn_common"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="16sp"
            tools:text="btn_right" />
    </LinearLayout>
</LinearLayout>