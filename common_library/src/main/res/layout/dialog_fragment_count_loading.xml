<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.jgw.common_library.bean.ProgressDialogBean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="154dp"
            android:background="@drawable/radius4_white"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:gravity="bottom"
                android:layout_height="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    tools:text="123"
                    android:text="@{data.countText}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" /"
                    android:textSize="12sp"
                    android:textColor="@color/gray_aa"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.totalText}"
                    android:textSize="12sp"
                    tools:text="456"
                    android:textColor="@color/gray_aa"/>

            </LinearLayout>
            <ProgressBar
                android:id="@+id/pb_update_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="220dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                android:progress="@{data.count}"
                android:max="@{data.total}"
                android:progressDrawable="@drawable/drawable_count_loading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@{data.tips}"
                android:includeFontPadding="false"
                android:textColor="@color/gray_66"
                android:textSize="14sp"
                tools:text="正在上传,请耐心等候哦~" />
        </RelativeLayout>
    </RelativeLayout>
</layout>